<Window x:Class="Okienko_dousuniecia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Okienko_dousuniecia"
        mc:Ignorable="d"
        Title="Calculator" Height="210" Width="200"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button"
               x:Key="myMargin">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    <StackPanel
        Orientation="Vertical">
        <Label 
            Content="0" 
            HorizontalContentAlignment="Right" 
            FontSize="50"
            />
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Button 
                Style="{StaticResource myMargin}" 
                Content="7"/>
            <Button 
                Style="{StaticResource myMargin}" 
                Content="8" 
                Grid.Column="1"/>                       
            <Button 
                Style="{StaticResource myMargin}" 
                Content="9" 
                Grid.Column="2"/>                       
            <Button 
                Style="{StaticResource myMargin}" 
                Content="*" 
                Grid.Column="3"/>
 
            <Button 
                Style="{StaticResource myMargin}" 
                Content="4" 
                Grid.Row="1" />
            <Button 
                Style="{StaticResource myMargin}" 
                Content="5" 
                Grid.Row="1" 
                Grid.Column="1"/>
            <Button 
                Style="{StaticResource myMargin}" 
                Content="6" 
                Grid.Row="1" 
                Grid.Column="2"/>
            <Button Style="{StaticResource myMargin}" 
                    Content="/" 
                    Grid.Row="1" 
                    Grid.Column="3"/>

            <Button
                Style="{StaticResource myMargin}"
                Content="1" 
                Grid.Row="2" />
            <Button
                Style="{StaticResource myMargin}"
                Content="2" 
                Grid.Row="2" 
                Grid.Column="1"/>
            <Button
                Style="{StaticResource myMargin}"
                Content="3" 
                Grid.Row="2" 
                Grid.Column="2"/>
            <Button
                Style="{StaticResource myMargin}"
                Content="-" 
                Grid.Row="2" 
                Grid.Column="3"/>

            <Button
                Style="{StaticResource myMargin}"
                Content="0" 
                Grid.Row="3" />
            <Button
                Style="{StaticResource myMargin}"
                Content="." 
                Grid.Row="3" 
                Grid.Column="1"/>
            <Button
                Style="{StaticResource myMargin}"
                Content="=" 
                Grid.Row="3" 
                Grid.Column="2"/>
            <Button
                Style="{StaticResource myMargin}"
                Content="+" 
                Grid.Row="3" 
                Grid.Column="3"/>
        </Grid>

    </StackPanel>

</Window>
